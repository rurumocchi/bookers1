<p id="notice"></p>
<p class= notice ><%= flash[:notice] %></p>
<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan = "3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><span> <%= link_to 'Show', book_path(book) %> </span></td>
            <td><span><%= link_to 'Edit', edit_book_path(book) %></span></td>
            <td><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?'} %></span></td>
        </tr>
        <% end %>
    </tbody>
</table>

<h2>New book</h2>


<%= form_with model:@book, local:true do |f| %>

<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class=field>
    <label>Title</label>
    <%= f.text_field :title %>
</div>

<div class=field>
    <label>Body</label>
    <%= f.text_area :body %>
</div>

<div class=actions>
    <%= f.submit 'Create Book' %>
</div>


<% end %>